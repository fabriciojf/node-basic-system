extends ../../public/default.pug

block title
  title Home - Bem-vindo

block content
  h1 Login  
  div.row
    form(
      method='post',
      action='/admin/auth'
    )
      div.row
        div.input-field.col.s6
          input.validate(
            id='iemail',
            name='email',
            type='text'
          )
          label(for='iemail') Email
      div.row
        div.input-field.col.s6
          input.validate(
            id='ipassword',
            name='password',
            type='text'
          )
          label(for='ipassword') Password

      div.row
        div.input-field.col.s6
          button.btn.waves-effect.waves-light( 
            type="submit",
            name="action"
          ) Enviar